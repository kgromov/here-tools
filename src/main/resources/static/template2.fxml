<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="com.pefrormance.analyzer.controller.MainController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="10"/>
    </padding>

    <Label fx:id="progressLabel" text="Progress: " GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <ProgressBar fx:id="progressBar" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <HBox GridPane.rowIndex="8" GridPane.columnSpan="2" alignment="BOTTOM_CENTER" GridPane.rowSpan="10">
        <Button text="Start" fx:id="start" onMouseClicked="#onMouseClicked"/>
        <Button text="Reset" fx:id="reset"/>
    </HBox>
</GridPane>